/* pages/discover/discover.wxss */

.news{
  width: 100%;
  height: auto;
  background: white;
  padding: 0%;
  border: none;
}

.n2{
  width: 100%;
  height: auto;
}

.n21{
  width: 100%;
  height: 190rpx;
  border-top: 2rpx #EDECE8 solid;
  padding: 30rpx 0 0;
}

.n21-left{
  width: 25%;
  height: 160rpx;
  float: left;
  overflow: hidden;
}

.n21-left image {
  margin-left: 30rpx;
  width: 160rpx;
  height: 100%;
}

.n21-right {
  width: 75%;
  height: 160rpx;
  background: white;
  float: right;
}

.n21-right .title {
  width: 90%;
  margin: 0 5%;
  font-size: 30rpx;
  line-height: 45rpx;
  color: #333;
}

.n21-right .subtitle {
  width: 90%;
  margin: 0 5%;
  font-size: 28rpx;
  color: #999;
  text-align: left;
  text-overflow: ellipsis;
}